<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Maxime Raguideau{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <meta name="viewport" content="width=device-width"/>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link href="{{ asset('stylesheets/screen.css') }}" media="screen, projection" rel="stylesheet" type="text/css" />
        <link href="{{ asset('stylesheets/print.css') }}" media="print" rel="stylesheet" type="text/css" />
        <!--[if IE]>
        <link href="{{ asset('stylesheets/ie.css') }} " media="screen, projection" rel="stylesheet" type="text/css" />
        <![endif]-->
        <script src='https://www.google.com/recaptcha/api.js'></script>
        {% block bootstrap %}{% endblock %}
        {% block script %}{% endblock %}
    </head>
    <body>
    <div class="container">

        <header>

            <!-- Navigation
            ================================================== -->
            {% block nav %}
<nav class="navigation">
    <div class="logo">
        <a href="/">Maxime Raguideau</a>
    </div>
    <div class="nav-right">
        <ul class="navigation-liens-droite">
            <li><a id="accueil" href="/">Accueil</a></li>
            <li><a id="actualite" href="{{ path('projet_last') }}">Actualités</a></li>
            <li><a id ="projet" href="#">Projets</a>
                <ul class ="sous-menu">
                    {% for projet in projets %}
                    <li><a href="{{ path('projet_cate', { 'idProjet': projet.id }) }}">{{ projet.titreMenu }}</a></li>
                    {% endfor %}
                </ul>
            </li>
        </ul>
        <div id="navigation-burger" class="navigation-burger">
             <span></span>
         </div>
    </div>
    <div class="navigation-mobile">
        <ul class="navigation-liens-mobile">
            <li><a href="/">Accueil</a></li>
            <li><a href="{{ path('projet_last') }}">Actualités</a></li>
            <li>
                    {% for projet in projets %}
                        <li><a href="{{ path('projet_cate', { 'idProjet': projet.id }) }}">{{ projet.titreMenu }}</a></li>
                    {% endfor %}

            </li>
        </ul>
    </div>
</nav>
            {% endblock %}
            <div id="alert">
                {% for key, flash in app.session.flashBag.all %}
                    {% for flashMessage in flash %}
                        <div class="alert alert-{{ key }} alert-dismissible" role="{{ key }}">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                                        aria-hidden="true">&times;</span></button>
                            {{ flashMessage }}
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
        </header>
            {% block body %}{% endblock %}
        <footer>
            <div class="footer">
<p>Copyright © 2017 Maxime Raguideau. All rights reserved.</p>
            </div>
        </footer>

        <script
                src="https://code.jquery.com/jquery-3.1.1.min.js"
                integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
                crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
        <script type="text/javascript">
            $(function () {
                var nav = $('.navigation-mobile')
                nav.hide();
                $('#navigation-burger').on('click',function (e) {
                    if(nav.is(':visible')){
                        nav.slideUp();
                    } else if (nav.is(':hidden')){
                        nav.slideDown();
                    }

                })
            })
        </script>
            {% block javascripts %}
            {% endblock %}
        </body>
    </div>
</html>
