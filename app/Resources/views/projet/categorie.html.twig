{% extends 'base.html.twig' %}


{% block body %}
    <hr>
<div class="content content-categorie">
    {% if articles is empty %}
    <section class="section">
        <h1>Il n'y a pas d'articles pour le moment dans cette catégorie.</h1>
    </section>

    {% else %}
        <h1>{{ articles[0].categorie.titre~" - "~articles[0].categorie.projet.titre }}</h1>

        <section class="section">

            {% for article in articles %}

                <article class="article">
                    <h2>{{ article.titre }}</h2>
                    {% if article.image == true %}
                        <img src="{{ asset(article.image) }}" alt="" class="img">
                    {% endif %}
                    <p>{{ article.contenu }}</p>


                </article>
                <hr>

            {% endfor %}


            {% endif %}

        </section>
    <aside class="aside-cat">
        <h2>Les catégories:</h2>
        {% for categorie in categories %}

                <a class="cate" href="{{ asset('projet/'~categorie.projet~'/categorie/'~categorie.id) }}">{{ categorie.titre }}</a></h2>

        {% endfor %}
    </aside>

</div>


{% endblock %}